<div class="page-header">
  <h1><%= t('views.accounts.show.page_listing_account_title') %></h1>
</div>
  <% unless @accounts.size ==0 %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%=t('views.accounts.show.page_table_account_number') %></th>
        <th><%=t('views.accounts.show.page_table_account_tmr') %></th>
        <th><%=t('views.accounts.show.page_table_account_active') %></th>
	    <th><%=t('views.accounts.show.page_table_account_operations') %></th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account|%>
        <tr>
          <td><%= link_to account.account_number, account %></td>
          <td><%= account.two_man_rule %></td>
          <td><%= account.is_active %></td>
          <td>
		   <div class="btn-group">
                <a class="btn dropdown-toggle btn-success" data-toggle="dropdown" href="#"> 
                  <span class="glyphicon icon-cog icon-white"></span><span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
				    <li>
					  <%= link_to "<span class='glyphicon icon-calendar'></span> Transactions".html_safe, account_transactions_path(account)%>  
		    		</li>
					<li>
					  <a href="#" data-toggle="tooltip" title="Get Ebox">
					    <span class="glyphicon icon-list-alt"></span> Statements
					  </a>
					</li>
          </ul>
        </div>
		  </td>
        </tr>
	  <% end %>
    </tbody>
  </table>
  <% end %>
  <%= paginate @accounts %>
  <%= page_entries_info @accounts %> 